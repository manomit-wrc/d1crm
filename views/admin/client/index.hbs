<div id="content" class="content">
			<!-- begin breadcrumb -->
	<ol class="breadcrumb pull-right">
		<li><a href="/admin/dashboard">Dashboard</a></li>
		<li class="active">Client</li>
	</ol>
	
	<!--<div class="box-footer">
      <a href="/admin/email/add"><button type="button" class="btn btn-success m-r-5 m-b-5">Create Email</button></a>
    </div>-->
    <br>

	<!-- begin row -->
	<div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Client Listing</h4>
                </div>
                <div class="panel-body">
                    {{#if message}}
                        <div class="alert alert-success" id="success-alert">
                            <button type="button" class="close" data-dismiss="alert">x</button>
                            <strong>Success! </strong>
                            {{message}}
                        </div>
          
                    {{/if}}
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Sr. No</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Mobile No.</th>
                                <th>Platform</th>
                                <th>Country Name</th>
                                <th>State Name</th>
                                <th>City Name</th>
                                <th>Pincode</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                           {{#each clientList}}
                            <tr class="odd gradeX">
                                <td>{{inc @index}}</td>
                                <td>{{this.first_name}}</td>
                                <td>{{this.last_name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobile_no}}</td>
                                <td>{{this.platform}}</td>
                                <td>{{this.country_name}}</td>
                                <td>{{this.state_name}}</td>
                                <td>{{this.city_name}}</td>
                                <td>{{this.pincode}}</td>
                                <td>{{this.address}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
</div>

