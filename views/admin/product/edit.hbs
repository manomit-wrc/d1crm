<div id="content" class="content">
			<!-- begin breadcrumb -->
	<ol class="breadcrumb pull-right">
		<li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/product">Product</a></li>
		<li class="active">Edit</li>
	</ol>
	
	<div class="row">
	    <div class="col-md-12">
	        <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
                <div class="panel-heading">
                    {{!-- <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                    </div> --}}
                    <h4 class="panel-title">Product - Edit</h4>
                </div>
                <div class="panel-body">
                    
                    <form class="form-horizontal" id="frmProduct" name="frmProduct" method="POST" action="/admin/product/edit/{{product.0._id}}" enctype="multipart/form-data">
                        
                        <div class="form-group">
                            <label class="col-md-3 control-label">Code</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" placeholder="Enter product code"  name="code" id="code" value="{{product.0.code}}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" placeholder="Enter product name"  name="name" id="name" value="{{product.0.name}}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Description</label>
                            <div class="col-md-9">
                                <textarea name="description" id="description" class="form-control" placeholder="Enter product description">{{product.0.description}}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Quantity</label>
                            <div class="col-md-9">
                                <input type="number" class="form-control" placeholder="Enter product quantity"  name="quantity" id="quantity" value="{{product.0.quantity}}" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Price</label>
                            <div class="col-md-9">
                                <input type="number" class="form-control" placeholder="Enter product price"  name="price" id="price" value="{{product.0.price}}" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Currency</label>
                            <div class="col-md-9">
                                <select name="symbol" id="symbol" class="form-control">
                                <option value="">Select Any</option>
                                <option value="&#36;">&#36;</option>
                                <option value="&#163;">&#163;</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Image</label>
                            <div class="col-md-9">
                                <input type="file" class="form-control"  name="image" id="image" class="image"/>
                                <img src="{{product_img product.0.image}}" id="img_preview" class="img-responsive" width="100px" height="100px">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-sm btn-success">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end panel -->
        </div>
        
    </div>
          
</div>
<style type="text/css">
.error {
    text-align: left!important;
    color: #f00;
}
</style>
<script type="text/javascript">
    $(document).ready(function(e){

        $("#success-alert").hide();
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function(){
           $("#success-alert").slideUp(500);
        });

        $("#frmProduct").validate({
            rules: {
                name: {
                    required: true
                },
                code: {
                    required: true
                },
                description: {
                    required: true
                },
                quantity: {
                    required: true
                },
                price: {
                    required: true
                },
                symbol: {
                    required: true
                },
                image: {
                    extension: 'jpg|png'
                }
            },
            messages: {
                name: {
                    required: "Please enter product name"
                },
                code: {
                    required: "Please enter product code"
                },
                description: {
                    required: "Please enter product description"
                },
                quantity: {
                    required: "Please enter product quantity"
                },
                price: {
                    required: "Please enter product price"
                },
                symbol: {
                    required: "Please select currency symbol"
                },
                image: {
                    extension: 'Image type must be jpg or png'
                }
            },
            submitHandler:function(form) {
                form.submit();
            }
        });

    });
</script>