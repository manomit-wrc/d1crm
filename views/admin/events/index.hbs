<div id="content" class="content">
			<!-- begin breadcrumb -->
	<ol class="breadcrumb pull-right">
		<li><a href="/admin/dashboard">Dashboard</a></li>
		<li class="active">Events</li>
	</ol>
	
	<div class="box-footer">
      <a href="/admin/events/add"><button type="button" class="btn btn-success m-r-5 m-b-5">Create Event</button></a>
    </div>
    <br>

	<!-- begin row -->
	<div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Event Listing</h4>
                </div>
                <div class="panel-body">
                    {{#if message}}
                        <div class="alert alert-success" id="success-alert">
                            <button type="button" class="close" data-dismiss="alert">x</button>
                            <strong>Success! </strong>
                            {{message}}
                        </div>
          
                    {{/if}}
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Sr. No</th>
                                <th>Event Name</th>
                                <th>Event Date</th>
                                <th>Event Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each events}}
                            <tr class="odd gradeX">
                                <td>{{inc @index}}</td>
                                <td>{{this.event_name}}</td>
                                <td>{{dateFormat this.event_date "dddd, MMMM Do YYYY"}}</td>
                                <td>{{this.event_time}}</td>
                                
                                <td>
                                    <a title="Edit" href="/admin/events/edit/{{this._id}}" class="btn btn-primary btn-sm m-r-5"><i class="fa fa-pencil"></i></a>

                                    <a title="Delete" href="/admin/events/delete/{{this._id}}" onclick="return confirm('Do you really want to delete the current record ?');" class="btn btn-danger btn-sm m-r-5"><i class="fa fa-trash"></i></a>

                                    <a title="Presentation" href="/admin/events/{{this._id}}/presentations" class="btn btn-primary btn-sm m-r-5"><i class="fa fa-file-powerpoint-o"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
</div>

